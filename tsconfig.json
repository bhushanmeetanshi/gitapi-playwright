{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "allowJs": true
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
  }